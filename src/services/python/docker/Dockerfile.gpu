# syntax=docker/dockerfile:1

# GPU-enabled runtime with CUDA libraries preinstalled
FROM nvidia/cuda:12.3.2-cudnn9-runtime-ubuntu22.04

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PORT=8000 \
    PYTHONPATH=/app

WORKDIR /app

# System deps (python, ffmpeg) and uv installer prereqs
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python3-venv python3-pip ffmpeg curl ca-certificates \
 && rm -rf /var/lib/apt/lists/*

# Install uv (faster package manager) and use system site-packages
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:${PATH}"

# Install Python deps
COPY src/services/python/docker/requirements.txt /tmp/requirements.txt
RUN uv pip install --system -r /tmp/requirements.txt

# App source (copy only what we need; build from repo root as context)
COPY src /app/src

EXPOSE ${PORT}

# Use NVIDIA runtime at run-time: --gpus=all
CMD ["uvicorn", "src.services.python.apps.stt_api:app", "--host", "0.0.0.0", "--port", "8000"]
